<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<FlowPane alignment="center" prefHeight="120.0" prefWidth="400.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HospitalManagementSystem.controller.DoctorLoginController">
    <HBox fx:id="hbUser" prefHeight="40" prefWidth="400">
        <Label fx:id="labelUser" prefHeight="40" prefWidth="120" text="用户名：" />
        <TextField fx:id="fieldUser" prefHeight="40" prefWidth="280" />
    </HBox>
    <HBox fx:id="hbPassword" prefHeight="40" prefWidth="400">
        <Label fx:id="labelPassword" prefHeight="40" prefWidth="120" text="密　码：" />
        <PasswordField fx:id="fieldPassword" prefHeight="40" prefWidth="280" />
    </HBox>
    <HBox fx:id="hbButton" prefHeight="40" prefWidth="400">
        <Button fx:id="btnReturn" onAction="#onClickReturn" prefHeight="40" prefWidth="100.0" text="返回上一级" />
        <Button fx:id="btnRegister" onAction="#onClickRegister" prefHeight="40" prefWidth="150.0" text="注册" />
        <Button fx:id="btnLogin" onAction="#onClickLogin" prefHeight="40" prefWidth="150.0" text="登　　录" />
    </HBox>
</FlowPane>
